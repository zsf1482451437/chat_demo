{
  "compilerOptions": {
    "target": "ES6", // 目标为 ES6
    "module": "ESNext", // 使用 ESNext 模块
    "strict": true, // 启用所有严格类型检查选项
    "esModuleInterop": true, // 允许对 ES 模块进行互操作
    "skipLibCheck": true, // 跳过库文件的类型检查
    "forceConsistentCasingInFileNames": true, // 强制文件名一致
    "outDir": "./dist", // 输出目录
    "rootDir": "./src", // 根目录
    "resolveJsonModule": true, // 允许导入 JSON 模块
    "isolatedModules": true, // 每个文件作为单独的模块处理
    "noEmit": false, // 生成输出文件
    "lib": ["dom", "es6"], // 包含 DOM 和 ES6 库
    "moduleResolution": "node", // 使用 Node 模块解析策略
    "allowSyntheticDefaultImports": true // 允许合成默认导入
  },
  "include": ["src/**/*"], // 包含 src 文件夹中的所有文件
  "exclude": ["node_modules", "dist"] // 排除 node_modules 和 dist 文件夹
}
